# Environment Variables Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# NETLIFY FUNCTIONS
# =============================================================================

# Custom message for the ping endpoint
PING_MESSAGE=ping

# =============================================================================
# GOOGLE AI (for future PDF processing integration)
# =============================================================================

# Google AI API key for PDF processing and question generation
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Google AI model to use for question generation
GOOGLE_AI_MODEL=gemini-1.5-flash

# =============================================================================
# APP CONFIGURATION
# =============================================================================

# App environment (development, staging, production)
NODE_ENV=development

# App port for local development
PORT=8080

# =============================================================================
# CORS ORIGINS (for development)
# =============================================================================

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:8080,http://localhost:8081,https://*.netlify.app

# =============================================================================
# FILE UPLOAD LIMITS
# =============================================================================

# Maximum file size for PDF uploads (in bytes)
MAX_FILE_SIZE=10485760

# Maximum number of files that can be uploaded at once
MAX_FILES=10

# =============================================================================
# QUESTION GENERATION SETTINGS
# =============================================================================

# Default number of questions to generate
DEFAULT_QUESTION_COUNT=5

# Default question difficulty
DEFAULT_DIFFICULTY=medium

# Default question types (comma-separated)
DEFAULT_QUESTION_TYPES=multiple-choice,true-false

# =============================================================================
# RATE LIMITING (for future implementation)
# =============================================================================

# Rate limit window in milliseconds
RATE_LIMIT_WINDOW=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable debug logging
DEBUG=false
